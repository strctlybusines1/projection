{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'export KMP_DUPLICATE_LIB_OK=TRUE'"
          },
          {
            "type": "command",
            "command": "echo 'Reminder: ensure venv is active and tabpfn is installed'"
          },
          {
            "type": "command",
            "command": "projection/.claude/hooks/precommit-tests.sh",
            "timeout": 60
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "projection/.claude/hooks/check-python-syntax.sh",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
